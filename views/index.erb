<!DOCTYPE html>
<html lang="ja">
<head>
  <title>First step ruby with docker</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Ruby</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>

  <div class="container" style="margin-top: 16px;">
    <div class="row">
      <div class="col-sm-12">
        <form>
          <div class="row">
            <div class="form-group col-sm-12">
              <textarea id="code" class="form-control" placeholder="puts 'hello, world'" rows="10"></textarea>
            </div>
            <div class="form-group col-sm-6">
              <input id="executeBtn" type="button" value="Execute" class="btn btn-primary"></input>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <textarea id="result" readonly="true" class="form-control" rows="10"></textarea>
      </div>
    </div>
  </div>

  <!-- scripts -->
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  <script>
    $(function() {
      $("#executeBtn").on("click", function() {
        $.ajax({
          url: "/",
          type: "POST",
          data: {
            code: $("#code").val()
          }
        })
        .done(function(data) {
          $("#result").val(data.content);
        })
        .fail(function() {
          alert("failed");
        });
      });
    });
  </script>
</body>
</html>
